@using pPsh.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - pPsh - Pretty Push</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class='@Html.IsActive("Home", "Index")'>
            @Html.ActionLink("pPsh", "Index", "Home", null, new { @class = "navbar-brand" })
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class='@Html.IsActive("Home", "About")'>
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class='@Html.IsActive("Home", "Api")'>
                    @Html.ActionLink("API", "Api", "Home", null, new { @class = "nav-link" })
                </li>
                <li class='@Html.IsActive("Home", "Contact")'>
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                @if (ViewContext.HttpContext.User.IsInRole("user"))
                {
                    <li class='@Html.IsActive("Scenarios", "Index")'>
                        @Html.ActionLink("Scenarios", "Index", "Scenarios", null, new { @class = "nav-link" })
                    </li>
                    <li class='@Html.IsActive("Devices", "Index")'>
                        @Html.ActionLink("Devices", "Index", "Devices", null, new { @class = "nav-link" })
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Piotr Graniszewski</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>